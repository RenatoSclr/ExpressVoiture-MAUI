<ul class="navbar-nav">
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <li class="nav-item">
            <span class="nav-link text-white">Vous êtes connecté sur @User.Identity.Name!</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" method="post" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-white">Déconnexion</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Connexion</a>
        </li>
    }
</ul>
