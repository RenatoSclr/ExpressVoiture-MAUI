<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ExpressVoiture.MAUI.ViewModels"
             x:Class="ExpressVoiture.MAUI.Views.LoginPage"
             x:DataType="viewmodel:LoginViewModel"
             Title="Connexion">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Se connecter" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Mot de passe" Text="{Binding Password}" IsPassword="True" />

        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Grid.Column="0" Text="Annuler" Command="{Binding CancelCommand}" />
            <Button Grid.Column="1" Text="Connexion" Command="{Binding LoginCommand}" />
        </Grid>

        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
    </StackLayout>
</ContentPage>